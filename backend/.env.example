# Application
NODE_ENV=development
PORT=3000
APP_NAME=EDB Backend API
APP_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://edb_user:edb_password_2025@localhost:5432/edb_database?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key
JWT_REFRESH_EXPIRATION=30d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@ecoledelabourse.com

# SMS (Twilio or other provider)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateways
# CinetPay
CINETPAY_API_KEY=your-cinetpay-api-key
CINETPAY_SITE_ID=your-cinetpay-site-id
CINETPAY_SECRET_KEY=your-cinetpay-secret-key
CINETPAY_NOTIFY_URL=http://localhost:3000/api/payments/cinetpay/callback

# Orange Money
ORANGE_MONEY_API_KEY=your-orange-money-api-key
ORANGE_MONEY_MERCHANT_KEY=your-orange-money-merchant-key
ORANGE_MONEY_CALLBACK_URL=http://localhost:3000/api/payments/orange-money/callback

# Wave
WAVE_API_KEY=your-wave-api-key
WAVE_SECRET_KEY=your-wave-secret-key
WAVE_CALLBACK_URL=http://localhost:3000/api/payments/wave/callback

# Coaching
FREE_COACHING_DURATION_MONTHS=3
COACHING_REMINDER_DAYS_BEFORE_EXPIRY=7,14,30

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Logging
LOG_LEVEL=debug
